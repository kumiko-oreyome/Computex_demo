<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
>

<TextView
    android:id="@+id/question"
    android:layout_width="1000dp"
    android:layout_height="300dp"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true"
    android:layout_marginBottom="86dp"
    android:layout_marginEnd="140dp"
    android:layout_marginLeft="140dp"
    android:layout_marginRight="140dp"
    android:layout_marginStart="140dp"
    android:layout_marginTop="87dp"
    android:background="@drawable/dialogue"
    android:gravity="center"
    android:text=""
    android:textColor="#FFFFFF"
    android:textSize="60sp"
    app:layout_constraintBottom_toTopOf="@+id/linearLayout"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="473dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/good"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:layout_toLeftOf="@+id/good"
            android:layout_toStartOf="@+id/bad"
            android:background="@drawable/button_health"
            android:gravity="center"
            android:text=""
            android:textSize="36sp" />

        <Button
            android:id="@+id/bad"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:layout_alignEnd="@+id/question"
            android:layout_alignRight="@+id/dialogue"
            android:layout_below="@+id/dialogue"
            android:background="@drawable/button_health"
            android:gravity="center"
            android:text=""
            android:textSize="36sp" />
    </LinearLayout>
</RelativeLayout>
