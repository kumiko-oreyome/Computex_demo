<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.ncku.iir.computex.health.Question">





    <TextView
        android:id="@+id/dialogue"
        android:layout_width="1000dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="false"
        android:layout_alignParentTop="true"
        android:background="@drawable/dialogue"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text=""
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        tools:layout_editor_absoluteX="110dp"
        tools:layout_editor_absoluteY="78dp" />

    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dialogue"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/button_1"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:layout_below="@+id/dialogue"
            android:layout_toStartOf="@+id/button_2"
            android:background="@drawable/button_health"
            android:gravity="center"
            android:text="中式"
            android:textSize="36sp"
            android:layout_toLeftOf="@+id/button_2" />

        <TextView
            android:id="@+id/button_2"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:layout_alignEnd="@+id/dialogue"
            android:layout_below="@+id/dialogue"
            android:background="@drawable/button_health"
            android:gravity="center"
            android:text="西式"
            android:textSize="36sp"
            android:layout_alignRight="@+id/dialogue" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/l2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/l1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/button_3"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:layout_below="@+id/dialogue"
            android:layout_toStartOf="@+id/button_4"
            android:background="@drawable/button_health"
            android:gravity="center"
            android:text="日式"
            android:textSize="36sp"
            android:layout_toLeftOf="@+id/button_r" />

        <TextView
            android:id="@+id/button_4"
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:layout_alignEnd="@+id/dialogue"
            android:layout_below="@+id/dialogue"
            android:background="@drawable/button_health"
            android:gravity="center"
            android:text="無偏好"
            android:textSize="36sp"
            android:layout_alignRight="@+id/dialogue" />

    </LinearLayout>

</RelativeLayout>