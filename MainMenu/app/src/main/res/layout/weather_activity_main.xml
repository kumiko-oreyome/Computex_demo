<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/background"
        android:layout_width="match_parent"
        android:layout_height="322dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/bg_daysun"
        android:orientation="vertical">

    </LinearLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/textInput"
        android:layout_width="368dp"
        android:layout_height="53dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        tools:layout_editor_absoluteX="444dp"
        tools:layout_editor_absoluteY="130dp">

        <android.support.design.widget.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint=""
            android:selectAllOnFocus="false"
            android:visibility="visible" />
    </android.support.design.widget.TextInputLayout>

    <TextView
        android:id="@+id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/temp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="45dp"
        android:text="台南市"
        android:textColor="#FFFFFF"
        android:textSize="40dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/cond"
        android:layout_alignStart="@+id/cond"
        android:layout_marginBottom="-226dp"
        android:text="50°C"
        android:textColor="#FFFFFF"
        android:textSize="110dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/cond"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/location"
        android:layout_marginTop="226dp"
        android:text=" 熱 到 爆   "
        android:textColor="#FFFFFF"
        android:textSize="28dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="53dp"
        android:layout_height="43dp"
        android:layout_alignTop="@+id/textInput"
        android:layout_toEndOf="@+id/textInput"
        android:visibility="visible"
        app:srcCompat="@android:drawable/btn_star_big_on" />


    <HorizontalScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="158dp"
        android:paddingLeft="45dp"
        android:paddingRight="45dp"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            >
            <!--<com.ncku.iir.computex.SingleScrollLinearLayout-->
            <com.ncku.iir.computex.SingleScrollLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/forecast0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></com.ncku.iir.computex.SingleScrollLinearLayout>

            <com.ncku.iir.computex.SingleScrollLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/forecast1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></com.ncku.iir.computex.SingleScrollLinearLayout>

            <com.ncku.iir.computex.SingleScrollLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/forecast2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></com.ncku.iir.computex.SingleScrollLinearLayout>

            <com.ncku.iir.computex.SingleScrollLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/forecast3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></com.ncku.iir.computex.SingleScrollLinearLayout>

            <com.ncku.iir.computex.SingleScrollLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/forecast4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></com.ncku.iir.computex.SingleScrollLinearLayout>

            <com.ncku.iir.computex.SingleScrollLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/forecast5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></com.ncku.iir.computex.SingleScrollLinearLayout>

            <com.ncku.iir.computex.SingleScrollLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/forecast6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></com.ncku.iir.computex.SingleScrollLinearLayout>

            <com.ncku.iir.computex.SingleScrollLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/forecast7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></com.ncku.iir.computex.SingleScrollLinearLayout>

            <com.ncku.iir.computex.SingleScrollLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/forecast8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></com.ncku.iir.computex.SingleScrollLinearLayout>

            <com.ncku.iir.computex.SingleScrollLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/forecast9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"></com.ncku.iir.computex.SingleScrollLinearLayout>


        </LinearLayout>

    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:orientation="horizontal"
        android:paddingLeft="45dp"
        android:paddingRight="45dp">

        <com.ncku.iir.computex.SingleFeatureBoardLinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/featureHumidity"
            android:layout_width="@dimen/fb_width"
            android:layout_height="@dimen/fb_height"
            android:background="@drawable/feature_humidity"

            >
        </com.ncku.iir.computex.SingleFeatureBoardLinearLayout>

        <com.ncku.iir.computex.SingleFeatureBoardLinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/featurePressure"
            android:layout_width="@dimen/fb_width"
            android:layout_height="@dimen/fb_height"
            android:background="@drawable/feature_pressure"
            >
        </com.ncku.iir.computex.SingleFeatureBoardLinearLayout>

        <com.ncku.iir.computex.SingleFeatureBoardLinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/featureWind"
            android:layout_width="@dimen/fb_width"
            android:layout_height="@dimen/fb_height"
            android:background="@drawable/feature_wind"
            >
        </com.ncku.iir.computex.SingleFeatureBoardLinearLayout>

        <com.ncku.iir.computex.SingleFeatureBoardLinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/featureSunTime"
            android:layout_width="@dimen/fb_width"
            android:layout_height="@dimen/fb_height"
            android:background="@drawable/feature_sunttime"
            >
        </com.ncku.iir.computex.SingleFeatureBoardLinearLayout>

        <com.ncku.iir.computex.SingleFeatureBoardLinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/featureVisibility"
            android:layout_width="@dimen/fb_width"
            android:layout_height="@dimen/fb_height"
            android:background="@drawable/feature_vision"
            >
        </com.ncku.iir.computex.SingleFeatureBoardLinearLayout>

    </LinearLayout>


    <ImageView
        android:id="@+id/remind_mask"
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/location"
        android:layout_marginEnd="34dp"
        app:srcCompat="@drawable/remind_mask_off" />

    <ImageView
        android:id="@+id/remind_jacket"
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:layout_alignStart="@+id/remind_mask"
        android:layout_below="@+id/remind_mask"
        app:srcCompat="@drawable/remind_jacket_off" />

    <ImageView
        android:id="@+id/remind_umbrella"
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:layout_alignTop="@+id/location"
        android:layout_toStartOf="@+id/remind_mask"
        app:srcCompat="@drawable/remind_umbrella_off" />

    <ImageView
        android:id="@+id/remind_sunscreen"
        android:layout_width="105dp"
        android:layout_height="105dp"
        android:layout_below="@+id/remind_mask"
        android:layout_toStartOf="@+id/remind_mask"
        app:srcCompat="@drawable/remind_sunscreen_off" />




</RelativeLayout>